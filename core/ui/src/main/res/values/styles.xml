<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Inbox.Title1.IntermediateVerticalPadding">
        <item name="android:paddingTop">@dimen/margin_intermediate</item>
        <item name="android:paddingBottom">@dimen/margin_intermediate</item>
    </style>

    <style name="CardView.Inbox.Preference" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeColor">#9E9E9E</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.Inbox.Preference" parent="TextAppearance.Inbox.Regular1">
        <item name="android:drawablePadding">@dimen/margin_default</item>
        <item name="drawableTint">@color/text_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginStart">@dimen/margin_intermediate</item>
        <item name="android:layout_marginEnd">@dimen/margin_intermediate</item>
    </style>

    <style name="RadioButton.Inbox" parent="">
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/radio_button_tint</item>
    </style>

    <style name="Switch.Inbox" parent="">
        <item name="thumbTint">@drawable/switch_thumb_tint_selector</item>
        <item name="trackTint">@drawable/switch_track_tint_selector</item>
    </style>

    <style name="Toolbar.Inbox" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextColor">@color/toolbar_title_text</item>
        <item name="subtitleTextColor">@color/toolbar_subtitle</item>
    </style>

    <style name="PopupMenu.Inbox" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/popup_menu</item>
    </style>
</resources>
