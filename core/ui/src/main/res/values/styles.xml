<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:paddingTop">@dimen/margin_intermediate</item>
        <item name="android:paddingBottom">@dimen/margin_intermediate</item>
    </style>

    <style name="CardView.Inbox.Preference" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="strokeColor">#5A5A5A</item>
        <item name="strokeWidth">0.8dp</item>
    </style>

    <style name="TextAppearance.Inbox.Preference" parent="TextAppearance.Inbox.Regular1">
        <item name="android:drawablePadding">@dimen/margin_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">none</item>
        <item name="android:layout_marginStart">@dimen/margin_intermediate</item>
        <item name="android:layout_marginEnd">@dimen/margin_intermediate</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonTint">@color/accent</item>
    </style>
</resources>
