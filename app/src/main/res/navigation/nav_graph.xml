<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="io.github.beleavemebe.inbox.ui.fragments.tasklist.TaskListFragment"
        android:label="TaskListFragment"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_taskListFragment_to_taskFragment"
            app:destination="@id/taskFragment">
            <argument
                android:name="taskId"
                app:argType="java.util.UUID"
                app:nullable="true" />
        </action>
        <action
            android:id="@+id/action_taskListFragment_to_projectListFragment"
            app:destination="@id/projectListFragment" />
        <action
            android:id="@+id/action_taskListFragment_to_meetingListFragment"
            app:destination="@id/meetingListFragment" />
        <action
            android:id="@+id/action_taskListFragment_to_infoListFragment"
            app:destination="@id/infoListFragment" />

    </fragment>
    <fragment
        android:id="@+id/taskFragment"
        android:name="io.github.beleavemebe.inbox.ui.fragments.task.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_taskFragment_to_taskListFragment"
            app:destination="@id/taskListFragment"
            app:popUpTo="@id/taskListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/projectListFragment"
        android:name="io.github.beleavemebe.inbox.ui.fragments.projectlist.ProjectListFragment"
        android:label="fragment_project_list"
        tools:layout="@layout/fragment_project_list" >
        <action
            android:id="@+id/action_projectListFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
        <action
            android:id="@+id/action_projectListFragment_to_meetingListFragment"
            app:destination="@id/meetingListFragment" />
        <action
            android:id="@+id/action_projectListFragment_to_infoListFragment"
            app:destination="@id/infoListFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoListFragment"
        android:name="io.github.beleavemebe.inbox.ui.fragments.infolist.InfoListFragment"
        android:label="fragment_info_list"
        tools:layout="@layout/fragment_info_list" >
        <action
            android:id="@+id/action_infoListFragment_to_meetingListFragment"
            app:destination="@id/meetingListFragment" />
        <action
            android:id="@+id/action_infoListFragment_to_projectListFragment"
            app:destination="@id/projectListFragment" />
        <action
            android:id="@+id/action_infoListFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/meetingListFragment"
        android:name="io.github.beleavemebe.inbox.ui.fragments.meetinglist.MeetingListFragment"
        android:label="fragment_meeting_list"
        tools:layout="@layout/fragment_meeting_list" >
        <action
            android:id="@+id/action_meetingListFragment_to_projectListFragment"
            app:destination="@id/projectListFragment" />
        <action
            android:id="@+id/action_meetingListFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
        <action
            android:id="@+id/action_meetingListFragment_to_infoListFragment"
            app:destination="@id/infoListFragment" />
    </fragment>

</navigation>